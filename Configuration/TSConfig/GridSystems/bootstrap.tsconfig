mod.column_layout {
    flexFormKey = bootstrap
    columnsCount = 12

    sizes {
        large {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.sizes.large
            widths = *
            offsets = *
            orders = *
        }

        medium {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.sizes.medium
            widths = *
            offsets = *
            orders = *
        }

        small {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.sizes.small
            widths = *
            widths.ordering = reverse
            offsets = *
            orders = *
        }
    }

    types {
        widths {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.widths.label
            itemLabel = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.widths.item_label
            itemLabelDisabled = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.widths.item_label_disabled
        }

        offsets {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.offsets.label
            itemLabel = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.offsets.item_label
            itemLabelDisabled = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.offsets.item_label_disabled
        }

        orders {
            label = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.orders.label
            itemLabel = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.orders.item_label
            itemLabelDisabled = LLL:EXT:column_layout/Resources/Private/Language/locallang_be.xlf:column_layout.orders.item_label_disabled
        }
    }
}